extends layout

block content
  .w3-card-4
    header.w3-container.w3-blue
      h1(style="text-align: center") Bem-vindo à Redu
  p(style="margin-left: 10px; font-size:20px; font-weight: bold") Recrusos Educativos: 
  table.w3-table-all
        tr
            th Data
            th Designação
            th Responsável
            th Operações
        each t in tarefas
            tr
                td= t.data
                td= t.designacao
                td= t.responsavel
                td 
                    a(href='/editar') Editar
                    span --
                    a(href='/remover/' + t._id) Remover
                
