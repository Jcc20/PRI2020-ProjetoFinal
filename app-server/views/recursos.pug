extends layout

block content

  p(style="margin-left: 10px; font-size:20px; font-weight: bold") Recrusos Educativos
  table(class="w3-table-all")
        tr.w3-blue
            th Tipo
            th Titulo
            th Subtitulo
            th Data da Criação
            th Autor
            th
            th
        each r in recursos
            tr
                td= r.tipo
                td= r.titulo
                td= r.subtitulo
                td= r.dataCriacao
                td= r.produtor.nomeP
                td
                  a(href='/editar') Editar
                td
                  a(href='/remover/' + r._id) Remover
  br
  a(href='/')
     button(class="w3-btn w3-blue" type="submit" style="padding: 15px 32px;  margin-left: 10px") home