extends layout

block content
  
  link(rel="stylesheet", href="https://fonts.googleapis.com/icon?family=Material+Icons")
  
  .w3-card-4
    header.w3-container.w3-blue
      h1(style="text-align: center") REDU
    
  p(style="text-align: center; font-size:22px; font-weight: bold") Perfil 
 
  table(class="w3-table-all")
        each elem in list
            tr
                td= "Nome: " + elem.nome 
                td= "Email: " + elem.email 
                td
                  a(href='/post/' + r._id) Ver Mais
  a(href=`/posts`) 
    button(class="w3-btn w3-blue" type="submit" style="padding: 15px 32px;  margin-left: 30px") Ver Posts
  |
  |
  a(href=`/recursos`) 
    button(class="w3-btn w3-blue" type="submit" style="margin:20px; padding: 15px 32px") Ver Recursos            
